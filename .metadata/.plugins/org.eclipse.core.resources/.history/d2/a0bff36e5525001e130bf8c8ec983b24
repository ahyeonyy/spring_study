	<!-- Bootstrap JavaScript -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

	<script>
		// ul의 li 요소를 클릭하면 해당 탭이 나타나도록 처리
		var tabLinks = document.querySelectorAll('.nav-link');
		for (var i = 0; i < tabLinks.length; i++) {
			tabLinks[i].addEventListener('click', function (event) {
				event.preventDefault();
				var tabTarget = event.target.getAttribute('data-target');
				showTab(tabTarget);
			});
		}

		function showTab(tabId) {
			// 모든 탭 컨텐츠를 숨김
			var tabContents = document.getElementsByClassName('tab-pane');
			for (var i = 1; i < tabContents.length; i++) {
				tabContents[i].classList.remove('show', 'active');
			}

			// 선택된 탭 컨텐츠를 보이도록 설정
			var selectedTab = document.querySelector(tabId);
			selectedTab.classList.add('show', 'active');
		}
	</script>
</head>

